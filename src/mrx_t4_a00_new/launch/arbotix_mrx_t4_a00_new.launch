<!-- rviz与arbotix配置 -->
<launch>
    <arg name="sim" default="true" />
    
    <arg name="/use_sim_time" value="false" />
    
    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find mrx_t4_a00_new)/urdf/mrx_t4_a00_new_gazebo.xacro'" />


    <node name="arbotix" pkg="arbotix_python" type="arbotix_driver" output="screen">
        <rosparam file="$(find mrx_t4_a00_new)/config/arbotix_arm.yaml" command="load" />
        <param name="sim" value="true" />
    </node>

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />
 
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mrx_t4_a00_new)/urdf.rviz" required="true" />

</launch>
